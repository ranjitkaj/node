    <style>
        *{
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }
        body {
            background-color: rgb(115, 115, 228);
        }
        .row{
            background-color: rgb(137, 136, 166);
            border-radius: 30px;
            box-shadow: 12px 12px 22px gray;

        }
        img{
            border-top-left-radius: 30px;
            border-bottom-left-radius: 30px;
            max-width: 100%;
            max-height: 100%;
            display: block;


        }
        .btn1{
            border: none;
            outline: none;
            height: 50px;
            width: 100%;
            background-color: black;
            color: white;
            border-radius: 4px;
            font-weight: bold;

        }
        .btn1:hover{
            background-color: green;
            border: 1px solid ;
            color: black;
        }
        #a{
            padding: 30px;
        }
	#ss{
        background-attachment: fixed;
        background-color: azure;
    }
    a { text-decoration:none;} 
    </style>

</head>

<body>
  <header>
    <!-- place navbar here -->
  </header>
  <main>
    <section class="form my-4 mx-5" >
        <div class="container" id="b"> 
            <div class="row no-gutters">
                <div class="col-lg-5">
                    <div id="a">
                    <img src="a.png" alt="img" class="img-fluid" height="100%" width="100%">
                </div>
                </div>
                <div class="col-lg-7 px-5 pt-5">
                    <form action="/register" method="post">
                        <div class="form-row">
                            <div class="col-lg-7">
                             Enter your Name:   <input type="text" placeholder="Name" class="form-control" name="fname" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-lg-7">
                             Enter your D.O.B:   <input type="date" placeholder="" class="form-control" name="dob" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-lg-7">
                             Enter your City:   <input type="text" placeholder="" class="form-control" name="city" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-lg-7">
                             Enter your Phone:   <input type="number" placeholder="" class="form-control" name="phone" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-lg-7">
                             Enter your E-Mail:   <input type="email" placeholder="abc@xyz.com" class="form-control" name="mail" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-lg-7">
                             Enter your Password:   <input type="password" placeholder="*********" class="form-control" name="password" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-lg-7">
                               <input type="submit" class="btn1 mt-3 mb-5" name="submit" />
                            </div>
                        </div>
                        <a href="password.html">Forgot Password ?</a>
                        <p>Have an account ? <a href="login_page.html">Login</a> </p>
                    </form>
                </div>
            </div>
        </div>
    </section>
    

  </main>
  <footer>
    <!-- place footer here -->
  </footer>
